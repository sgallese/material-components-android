<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/cat_textfield_standard_spacing"
  android:orientation="vertical">

  <!-- Default width of text fields should be 245dp. -->
  <com.google.android.material.textfield.TextInputLayout
    style="@style/SebastianCustomTextFieldStyle"
    android:layout_width="@dimen/material_textinput_default_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="4dp"
    android:hint="Adjust volume"
    app:counterEnabled="true"
    app:counterMaxLength="3"
    app:endIconDrawable="@drawable/ic_volume_up_black_24dp"
    app:endIconMode="custom"
    app:helperText="Volume"
    app:helperTextEnabled="true"
    app:placeholderText="87"
    app:startIconDrawable="@drawable/ic_volume_down_white_24dp">

    <com.google.android.material.textfield.TextInputEditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
